{
  "name": "reposynergy",
  "version": "1.0.0",
  "description": "A powerful desktop application for managing and synchronizing GitHub and Gitee repositories",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.0",
    "axios": "^1.6.7",
    "electron-store": "^8.1.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/electron-store": "^3.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@vitejs/plugin-vue": "^5.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.27"
  },
  "author": "zh4men9",
  "license": "MIT",
  "build": {
    "appId": "com.reposynergy.app",
    "productName": "RepoSynergy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
